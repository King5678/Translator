.container {
    padding: 20px; /* 给整个容器添加内边距 */
}

.input-container {
    margin-top: 50px; /* 增加顶部间距 */
}

.result-container {
    margin-top: 20px; /* 增加结果框的顶部间距 */
}

/* 整体容器样式 */
.container {
    padding: 16px;
    background-color: #f7f7f7;
}

/* 单个关键词项的样式 */
.keyword-item {
    padding: 12px;
    margin-bottom: 10px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
}

/* 词汇标题样式 */
.keyword-title {
    font-size: 18px;
    font-weight: bold;
    color: #333;
    margin-bottom: 6px;
}

/* 解释内容样式 */
.keyword-explanation {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
}