.import-button {
    background-color: #4a90e2;
    color: #ffffff;
    font-size: 20px;
    border: none;
    border-radius: 20px;
    padding: 10px 30px;
    margin: 20px 0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    transition: background-color 0.3s, box-shadow 0.3s;
}

.import-button:active {
    background-color: #357ab7;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
}


.section-title {
    font-family: Arial, sans-serif;
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 10px;
}

.result-title {
    font-family: Arial, sans-serif;
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 10px;
}

.input-container,
.result-container,
.keyword-container,
.syntax-container {
    margin-bottom: 20px;
    padding: 15px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.input-field {
    width: calc(100% - 20px);
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.translate-button,
.extract-button,
.syntax-button {
    width: 80%;
    padding: 10px;
    background-color: #007aff;
    color: #ffffff;
    border: none;
    border-radius: 20px;
    cursor: pointer;
}

/* 单个关键词项的样式 */
.keyword-item {
    padding: 12px;
    margin-bottom: 10px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
}

/* 词汇标题样式 */
.keyword-title {
    font-size: 16px;
    font-weight: 500;
    color: #333;
    margin-bottom: 6px;
}

/* 解释内容样式 */
.keyword-explanation {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
}