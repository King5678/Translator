/* 容器整体样式 */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: 20px;
    background-color: #f9f9f9;
    min-height: 100vh;
}

/* 按钮容器样式 */
.button-container {
    margin-top: 40px; /* 添加此项以下移按钮 */
}

/* 上传图片按钮样式 */
.upload-button {
    background-color: #4a90e2; /* 蓝色 */
    color: #ffffff;
    font-size: 24px;
    border: none;
    border-radius: 25px;
    padding: 15px 40px;
    margin-bottom: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    transition: background-color 0.3s, box-shadow 0.3s;
    flex-shrink: 0; /* 防止按钮被挤压 */
}

/* 按钮交互效果 */
.upload-button:active {
    background-color: #357ab7; /* 深蓝色用于按下时的效果 */
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
}


/* 图片容器样式 */
.image-container {
    width: 90%;
    margin-bottom: 20px;
    display: flex;
    justify-content: center;
}

/* 上传的图片样式 */
.uploaded-image {
    width: 100%;
    max-width: 400px;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: 2px solid #ddd;
}

/* 结果容器样式 */
.result-container {
    width: 90%;
    background-color: #ffffff;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin-bottom: 20px;
    text-align: center;
}

/* 标题文本样式 */
.result-title {
    font-size: 24px;
    color: #333;
    font-weight: bold;
    margin-bottom: 10px;
}

/* OCR结果文本样式 */
.result-text {
    font-size: 20px;
    color: #555;
    margin: 5px 0;
}
